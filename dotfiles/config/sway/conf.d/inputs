# SwayWM inputs configuration. For detailed information type "man sway"
# For a list of devices run: swaymsg -t get_inputs

# Variables
set $mouse "5426:67:Razer_Razer_DeathAdder_Chroma"

# Keyboard
input type:keyboard {
    xkb_layout us
    xkb_options caps:swapescape
    repeat_delay 250
    repeat_rate 45

}

# Mouse Config
input type:pointer {
    accel_profile flat
    #dwt enabled
}

# Seats
seat seat0 hide_cursor 5000
